<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_item_height">


        <android.support.v7.widget.CardView
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/item_margin"
            android:layout_marginLeft="@dimen/home_item_margin_left"
            android:layout_marginRight="@dimen/home_item_margin_right"
            android:layout_marginTop="@dimen/item_margin"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground">


                <ImageView
                    android:id="@+id/home_item_icon"
                    android:layout_width="@dimen/home_item_icon_size"
                    android:layout_height="@dimen/home_item_icon_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/home_item_icon_left_margin"
                    android:layout_marginTop="@dimen/home_item_margin"
                    android:src="@mipmap/movie" />

                <TextView
                    android:id="@+id/home_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="个人信息"
                    android:textColor="@color/app_main_theme_color_accent"
                    android:textSize="@dimen/home_item_text_size" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>